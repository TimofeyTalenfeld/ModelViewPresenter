<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingError"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_connect_error" />

    <TextView
        android:id="@+id/error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/connection_error_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:text="@string/connection_error_subtitle"
        android:textColor="@color/common_inactive"
        android:textSize="@dimen/text_size_middle" />

    <com.rafakob.drawme.DrawMeTextView
        style="@style/RippledTextItem"
        android:id="@+id/error_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:text="@string/connection_error_repeat"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>